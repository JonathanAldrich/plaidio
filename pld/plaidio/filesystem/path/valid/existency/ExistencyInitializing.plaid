package plaidio.filesystem.path.valid.existency;

import plaidio.filesystem.path.valid.ExistencyDimension;

/*------------------------------------------------------------------------------
/**
	CID:	TS-11213
	DESC:	"ExistencyInitializing" typestate which is created to intialize ExistencyDimension state.
			This state should not be public.
**/
state ExistencyInitializing case of ExistencyDimension
{
	/*-----------------------------------------------------------------------------
	/**
		CID:	ST-112131
		DESC:	Checks whether the path exists or not, and within ExistencyDimension,
				changes the state of "this" into either "Existent" or "NonExistent".
	**/
	method void finalize() /*[shared ExistencyInitializing >> shared ExistencyDimension this]*/
	{
		ifElse (j_File.exists())
		{
			this <- Existent;
			initializeExistent();
		}
		//else
		{
			this <- NonExistent;
			initializeNonExistent();
		}
	}
	//method void finalize() /*[shared ExistencyInitializing >> shared ExistencyDimension this]*/
}