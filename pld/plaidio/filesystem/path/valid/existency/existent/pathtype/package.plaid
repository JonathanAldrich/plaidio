package plaidio.filesystem.path.valid.existency.existent.pathtype;

import plaidio.filesystem.separator;
import plaidio.filesystem.makePath;
import plaidio.statecheckers.isPath;
import plaidio.statecheckers.isValid;
import plaidio.statecheckers.isExistencyDimension;
import plaidio.statecheckers.isExistent;
import plaidio.statecheckers.isPathTypeDimension;
import plaidio.statecheckers.isLeaf;
import plaidio.statecheckers.isFile;
import plaidio.statecheckers.isFolder;
import plaidio.statecheckers.isUnknownLeaf;
import com.akefirad.plaid.testing.debug;
import com.akefirad.plaid.testing.makeTestBed;
import com.akefirad.plaid.testing.makeTestCase;

/*------------------------------------------------------------------------------
/**
	DESC:	Test plaidio.filesystem.path.valid.existency.existent.pathtype package's features
**/
method void test_pathtype(immutable Boolean verbose)
{
	val testbed = makeTestBed();
	var testcase = new Unit;
	
	testcase = makeTestCase("TC-TS-11211111 make a file path", fn(tc) => {
		val unique Path v = makePath(java.lang.System.getProperty("user.dir") + separator() + "build.xml");
		debug("'" + v + "'");
		ifElse (isPath(v)) { debug("The object is Path!"); } /*else*/ { debug("The object is NOT Path!"); tc.fail(); };
		ifElse (isValid(v)) { debug("The object is Valid!"); } /*else*/ { debug("The object is NOT Valid!"); tc.fail(); };
		ifElse (isExistencyDimension(v)) { debug("The object has ExistencyDimension!"); } /*else*/ { debug("The object has NO ExistencyDimension!"); tc.fail(); };
		ifElse (isExistent(v)) { debug("The object is Existent!"); } /*else*/ { debug("The object is NOT Existent!"); tc.fail(); };
		ifElse (isPathTypeDimension(v)) { debug("The object has PathTypeDimension!"); } /*else*/ { debug("The object has NO PathTypeDimension!"); tc.fail(); };
		ifElse (isLeaf(v)) { debug("The object is Leaf!"); } /*else*/ { debug("The object is NOT Leaf!"); tc.fail(); };
		ifElse (isFile(v)) { debug("The object is File!"); } /*else*/ { debug("The object is NOT File!"); tc.fail(); };
		ifElse (isFolder(v)) { debug("The object is Folder!"); tc.fail(); } /*else*/ { debug("The object is NOT Folder!"); };
		ifElse (isUnknownLeaf(v)) { debug("The object is UnknownLeaf!"); tc.fail(); } /*else*/ { debug("The object is NOT UnknownLeaf!"); };
	});
	testbed.addTestCase(testcase);

	testcase = makeTestCase("TC-TS-11211111 make a folder path", fn(tc) => {
		val unique Path v = makePath(java.lang.System.getProperty("user.dir"));
		debug("'" + v + "'");
		ifElse (isPath(v)) { debug("The object is Path!"); } /*else*/ { debug("The object is NOT Path!"); tc.fail(); };
		ifElse (isValid(v)) { debug("The object is Valid!"); } /*else*/ { debug("The object is NOT Valid!"); tc.fail(); };
		ifElse (isExistencyDimension(v)) { debug("The object has ExistencyDimension!"); } /*else*/ { debug("The object has NO ExistencyDimension!"); tc.fail(); };
		ifElse (isExistent(v)) { debug("The object is Existent!"); } /*else*/ { debug("The object is NOT Existent!"); tc.fail(); };
		ifElse (isPathTypeDimension(v)) { debug("The object has PathTypeDimension!"); } /*else*/ { debug("The object has NO PathTypeDimension!"); tc.fail(); };
		ifElse (isLeaf(v)) { debug("The object is Leaf!"); } /*else*/ { debug("The object is NOT Leaf!"); tc.fail(); };
		ifElse (isFile(v)) { debug("The object is File!"); tc.fail(); } /*else*/ { debug("The object is NOT File!"); };
		ifElse (isFolder(v)) { debug("The object is Folder!"); } /*else*/ { debug("The object is NOT Folder!"); tc.fail(); };
		ifElse (isUnknownLeaf(v)) { debug("The object is UnknownLeaf!"); tc.fail(); } /*else*/ { debug("The object is NOT UnknownLeaf!"); };
	});
	testbed.addTestCase(testcase);

	testcase = makeTestCase("TC-TS-11211111 make an unknown leaf path", fn(tc) => {
		val unique Path v = makePath(java.lang.System.getProperty("user.dir"));
		debug("'" + v + "'");
		ifElse (isPath(v)) { debug("The object is Path!"); } /*else*/ { debug("The object is NOT Path!"); tc.fail(); };
		ifElse (isValid(v)) { debug("The object is Valid!"); } /*else*/ { debug("The object is NOT Valid!"); tc.fail(); };
		ifElse (isExistencyDimension(v)) { debug("The object has ExistencyDimension!"); } /*else*/ { debug("The object has NO ExistencyDimension!"); tc.fail(); };
		ifElse (isExistent(v)) { debug("The object is Existent!"); } /*else*/ { debug("The object is NOT Existent!"); tc.fail(); };
		ifElse (isPathTypeDimension(v)) { debug("The object has PathTypeDimension!"); } /*else*/ { debug("The object has NO PathTypeDimension!"); tc.fail(); };
		ifElse (isLeaf(v)) { debug("The object is Leaf!"); } /*else*/ { debug("The object is NOT Leaf!"); tc.fail(); };
		ifElse (isFile(v)) { debug("The object is File!"); tc.fail(); } /*else*/ { debug("The object is NOT File!"); };
		ifElse (isFolder(v)) { debug("The object is Folder!"); tc.fail(); } /*else*/ { debug("The object is NOT Folder!"); };
		ifElse (isUnknownLeaf(v)) { debug("The object is UnknownLeaf!"); } /*else*/ { debug("The object is NOT UnknownLeaf!"); tc.fail(); };
	});
	testbed.addTestCase(testcase);

	testbed.runTestCases(verbose);
}
