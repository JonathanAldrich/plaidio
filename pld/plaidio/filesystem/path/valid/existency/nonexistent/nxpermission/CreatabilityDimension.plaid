package plaidio.filesystem.path.valid.existency.nonexistent.nxpermission;

import plaidio.filesystem.path.valid.existency.nonexistent.nxpermission.creatability.Creatable;
import plaidio.filesystem.path.valid.existency.nonexistent.nxpermission.creatability.NonCreatable;

/*------------------------------------------------------------------------------
/**
	CID:	TS-1121211
	DESC:	"CreatabilityDimension" typestate which is one dimension of NonExistentPermission typestate.
**/
state CreatabilityDimension
{
	//-----------------------------------------------------------------------------
	/**
		CID:	ST-11212111
		DESC:	Checks all dimensions of the object.
	**/
	method void stabilizeCreatabilityDimension() /*[shared CreatabilityDimension >> shared CreatabilityDimension this]*/
	{
		checkCreatability();
	}
	//method void stabilizeCreatabilityDimension() /*[shared CreatabilityDimension >> shared CreatabilityDimension this]*/

	//-----------------------------------------------------------------------------
	/**
		CID:	ST-11212112
		DESC:	Checks whether the path is creatable or not, and
				changes the state of "this" into either "Creatable" or "NonCreatable".				
	**/
	method void checkCreatability() /*[shared CreatabilityDimension >> shared CreatabilityDimension this]*/
	{
		printLine("START checkCreatability");
		ifElse (true)
		{
			this <- Creatable;
			stabilizeCreatable();
		}
		/*else*/
		{
			this <- NonCreatable;
			stabilizeNonCreatable();
		}
	}
	//method void checkCreatability() /*[shared CreatabilityDimension >> shared CreatabilityDimension this]*/
}
