package plaidio.filesystem.path.valid;

import plaidio.filesystem.path.valid.relativity.NonRelative;
import plaidio.filesystem.path.valid.relativity.Relative;

/*------------------------------------------------------------------------------
/**
	CID:	TS-1122
	DESC:	"RelativityDimension" typestate which is one dimension of Valid typestate.
**/
state RelativityDimension
{
	//-----------------------------------------------------------------------------
	/**
		CID:	ST-11221
		DESC:	Checks all dimensions of the object.
	**/
	method void stabilizeRelativityDimension() /*[shared ExistencyDimension >> shared ExistencyDimension this]*/
	{
		checkRelativity();
	}
	//method void stabilizeRelativityDimension() /*[shared ExistencyDimension >> shared ExistencyDimension this]*/

	/*-----------------------------------------------------------------------------
	/**
		CID:	ST-11222
		DESC:	Checks whether the path is relative or not, and within RelativityDimension,
				changes the state of "this" into either "NonRelative" or "Relative".
	**/
	method void checkRelativity() /*[shared RelativityDimension >> shared RelativityDimension this]*/
	{
		printLine("START checkRelativity");
		ifElse (j_File.isAbsolute())
		{
			this <- NonRelative;
			stabilizeNonRelative();
		}
		//else
		{
			this <- Relative;
			stabilizeRelative();
		}
	}
	//method void checkRelativity() /*[shared RelativityDimension >> shared RelativityDimension this]*/
}