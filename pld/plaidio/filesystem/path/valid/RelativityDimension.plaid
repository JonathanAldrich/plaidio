package plaidio.filesystem.path.valid;

import plaidio.filesystem.path.valid.relativity.NonRelative;
import plaidio.filesystem.path.valid.relativity.Relative;

/*------------------------------------------------------------------------------
/**
	CID:	TS-1.1.2.2
	DESC:	"RelativityDimension" typestate which is one dimension of Valid typestate.
**/
state RelativityDimension
{
	/*-----------------------------------------------------------------------------
	/**
		CID:	ST-1.1.2.2.1
		DESC:	Checks whether the path is relative or not, and within RelativityDimension,
				changes the state of "this" into either "NonRelative" or "Relative".
	**/
	/*public*/ method /*void*/ checkRelativity() /*[unique RelativityDimension >> unique NonRelative | unique Relative this]*/
	{
		ifElse (jFile.isAbsolute())
		{
			this <- NonRelative;
		}
		//else
		{
			this <- Relative;
		}
	}
	///*public*/ method /*void*/ checkRelativity() /*[unique RelativityDimension >> unique NonRelative | unique Relative this]*/
}