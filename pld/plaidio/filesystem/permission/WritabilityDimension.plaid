/**
	CID:	SR-121
	AUTHOR: Rad Akefirad akefirad@gmail.com
	DESC:	"Writability" state region of "Permission" typestate.
	FILE:	WritabilityDimension.plaid
**/
package plaidio.filesystem.permission;

import plaidio.filesystem.path.valid.existency.Existent;
import plaidio.filesystem.path.valid.existency.NonExistent;
import plaidio.filesystem.permission.writability.Writable;
import plaidio.filesystem.permission.writability.NonWritable;

/*------------------------------------------------------------------------------
/**
	CID:	TS-123
	DESC:	"WritabilityDimension" typestate which is one dimension of Permission typestate.
**/
state WritabilityDimension
{
	//-----------------------------------------------------------------------------
	/**
		CID:	ST-1231
		DESC:	Checks whether the path is writable or not, and
				changes the state of "this" into either "Writable" or "NonWritable".				
	**/
	/*public*/ method /*void*/ checkWritability() /*[shared Valid >> shared Valid this]*/
	{
		match (this)
		{
			case Existent
			{
				ifElse (j_File.canWrite())
				{ this <- Writable; }
				//else
				{ this <- NonWritable; }
			}
		};
	}
	///*public*/ method /*void*/ checkWritability() /*[shared Valid >> shared Valid this]*/
}
