	AUTHOR: Rad Akefirad akefirad@gmail.com
	DESC:	Package plaidio.filesystem.validity.valid.parentalness
			contains subtypes of "D_Parentalness" typestate.
	FILE:	package.plaid
**/
package plaidio.filesystem.validity.valid.parentalness;

import plaidio.filesystem.makePath;

import plaidio.filesystem._debuger.debugIsPath;
import plaidio.filesystem.validity._debuger.debugIsValid;
import plaidio.filesystem.validity.valid._debuger.debugIsD_Parentalness;
import plaidio.filesystem.validity.valid.parentalness._debuger.debugIsParentless;
import plaidio.filesystem.validity.valid.parentalness._debuger.debugIsParented;

import com.akefirad.plaid.testing.makeTestBed;

/*------------------------------------------------------------------------------
/**
	CID:	TC-SR-99
	DESC:	Test plaidio.filesystem.validity.valid.parentalness package's features
**/
method void test_parentalness(immutable Boolean verbose)
{
	val testbed = makeTestBed("Test cases of plaidio.filesystem.validity.valid.parentalness package's features");

	testbed.makeTestCase("TC-TS-28 make a parentless path", fn(tc) => {
		val unique Path o = makePath("foo");
		tc.debug("'" + o + "'", verbose);
		tc.assert(fn() => { debugIsPath(o, verbose); }, verbose);
		tc.assert(fn() => { debugIsValid(o, verbose); }, verbose);
		tc.assert(fn() => { debugIsD_Parentalness(o, verbose); }, verbose);
		tc.assert(fn() => { debugIsParentless(o, verbose); }, verbose);
		tc.assert(fn() => { debugIsParented(o, verbose) == false; }, verbose);
	});

	testbed.makeTestCase("TC-TS-29 make a parented path", fn(tc) => {
		val unique Path o = makePath("parent\\foo");
		tc.debug("'" + o + "'", verbose);
		tc.assert(fn() => { debugIsPath(o, verbose); }, verbose);
		tc.assert(fn() => { debugIsValid(o, verbose); }, verbose);
		tc.assert(fn() => { debugIsD_Parentalness(o, verbose); }, verbose);
		tc.assert(fn() => { debugIsParentless(o, verbose) == false; }, verbose);
		tc.assert(fn() => { debugIsParented(o, verbose); }, verbose);
	});

	testbed.runTestCases(verbose);
}
