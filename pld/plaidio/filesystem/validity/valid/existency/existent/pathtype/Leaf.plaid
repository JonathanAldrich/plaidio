package plaidio.filesystem.validity.valid.existency.existent.pathtype;

import plaidio.filesystem.validity.valid.existency.existent.PathTypeDimension;
import plaidio.filesystem.validity.valid.existency.existent.pathtype.leaftype.File;
import plaidio.filesystem.validity.valid.existency.existent.pathtype.leaftype.Folder;
import plaidio.filesystem.validity.valid.existency.existent.pathtype.leaftype.UnknownLeaf;

/*------------------------------------------------------------------------------
/**
	CID:	TS-1121121
	DESC:	"Leaf" typestate which contains an existent leaf path.
**/
state Leaf case of PathTypeDimension
{
	//-----------------------------------------------------------------------------
	/**
		CID:	ST-11211210
		DESC:	Checks all dimensions of the object.
	**/
	method void p_InitializeLeaf() /*[shared Leaf >> shared Leaf this]*/
	{
		ifElse (j_File.isFile())
		{
			p_MakeFile();
		}
		/*else*/
		{
			ifElse (j_File.isDirectory())
			{
				p_MakeFolder();
			}
			/*else*/
			{
				p_MakeUnknownLeaf();
			}
		}
	}
	//method void p_InitializeLeaf() /*[shared Leaf >> shared Leaf this]*/

	/*-----------------------------------------------------------------------------
	/**
		CID:	ST-11211211
		DESC:	Makes the object File.
	**/
	method void p_MakeFile() /*[shared Leaf >> shared File this]*/
	{
		this <- File;
		p_InitializeFile();
	}
	//method void p_MakeExistent() /*[shared Leaf >> shared File this]*/

	/*-----------------------------------------------------------------------------
	/**
		CID:	ST-11211212
		DESC:	Makes the object Folder.
	**/
	method void p_MakeFolder() /*[shared Leaf >> shared Folder this]*/
	{
		this <- Folder;
		p_InitializeFolder();
	}
	//method void p_MakeFolder() /*[shared Leaf >> shared Folder this]*/

	/*-----------------------------------------------------------------------------
	/**
		CID:	ST-11211213
		DESC:	Makes the object UnknownLeaf.
	**/
	method void p_MakeUnknownLeaf() /*[shared Leaf >> shared UnknownLeaf this]*/
	{
		this <- Folder;
		p_InitializeUnknownLeaf();
	}
	//method void p_MakeUnknownLeaf() /*[shared Leaf >> shared UnknownLeaf this]*/
}
