package plaidio.filesystem.validity.valid.existency.existent.expermission;

import plaidio.filesystem.validity.valid.existency.existent.expermission.writability.Writable;
import plaidio.filesystem.validity.valid.existency.existent.expermission.writability.NonWritable;

/*------------------------------------------------------------------------------
/**
	CID:	TS-1121113
	DESC:	"WritabilityDimension" typestate which is one dimension of ExPermission typestate.
**/
state WritabilityDimension
{
	//-----------------------------------------------------------------------------
	/**
		CID:	ST-11211131
		DESC:	Checks all dimensions of the object.
	**/
	method void initializeWritabilityDimension() /*[shared WritabilityDimension >> shared WritabilityDimension this]*/
	{
		checkWritability();
	}
	//method void initializeWritabilityDimension() /*[shared WritabilityDimension >> shared WritabilityDimension this]*/

	//-----------------------------------------------------------------------------
	/**
		CID:	ST-11211132
		DESC:	Checks whether the path is writable or not, and
				changes the state of "this" into either "Writable" or "NonWritable".				
	**/
	method void checkWritability() /*[shared WritabilityDimension >> shared WritabilityDimension this]*/
	{
		ifElse (j_File.canWrite())
		{
			this <- Writable;
			initializeWritable();
		}
		/*else*/
		{
			this <- NonWritable;
			initializeNonWritable();
		}
	}
	//method void checkWritability() /*[shared WritabilityDimension >> shared WritabilityDimension this]*/
}
