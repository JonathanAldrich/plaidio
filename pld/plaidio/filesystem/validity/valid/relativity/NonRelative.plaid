package plaidio.filesystem.validity.valid.relativity;

import plaidio.filesystem.validity.valid.RelativityDimension;
import plaidio.filesystem.validity.valid.relativity.nonrelative.Absolute;
import plaidio.filesystem.validity.valid.relativity.nonrelative.Canonical;

/*------------------------------------------------------------------------------
/**
	CID:	TS-11221
	DESC:	"NonRelative" typestate which contains a non-relative valid path.
**/
state NonRelative case of RelativityDimension
{
	//-----------------------------------------------------------------------------
	/**
		CID:	ST-112210
		DESC:	Checks all dimensions of the object.
	**/
	method void p_InitializeNonRelative() /*[shared NonRelative >> shared NonRelative this]*/
	{
		ifElse (com.akefirad.plaid.PlaidHelper.isCanonicalPath(j_File))
		{
			p_MakeCanonical();
		}
		/*else*/
		{
			p_MakeAbsolute();
		}
	}
	//method void p_InitializeNonRelative() /*[shared NonRelative >> shared NonRelative this]*/

	/*-----------------------------------------------------------------------------
	/**
		CID:	ST-112211
		DESC:	Makes the object Absolute.
	**/
	method void p_MakeAbsolute() /*[shared NonRelative >> shared Absolute this]*/
	{
		this <- Absolute;
		p_InitializeAbsolute();
	}
	//method void p_MakeExistent() /*[shared NonRelative >> shared Absolute this]*/

	/*-----------------------------------------------------------------------------
	/**
		CID:	ST-112212
		DESC:	Makes the object Canonical.
	**/
	method void p_MakeCanonical() /*[shared NonRelative >> shared Canonical this]*/
	{
		this <- Canonical;
		p_InitializeCanonical();
	}
	//method void p_MakeFolder() /*[shared NonRelative >> shared Canonical this]*/
}